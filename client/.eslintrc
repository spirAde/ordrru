{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "strict": 0,
    "no-nested-ternary": 0,
    "new-cap": 0,
    "no-unused-expressions": [2, { "allowTernary": true }],
    "id-length": [2, { "min": 2, "properties": "never", "exceptions": ["_"] }],
    "no-shadow": 0,
    "no-underscore-dangle": ["error", { "allow": ["__INITIAL_STATE__", "__CLIENT__", "__REFERENCE_DATETIME__", "__DEVELOPMENT__"] }],
    "react/jsx-boolean-value": 1,
    "react/jsx-no-bind": [2, { "allowBind": true }]
  },
  "extends": [
    "airbnb"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "window": true,
    "document": true,
    "navigator": true,
    "L": true
  }
}