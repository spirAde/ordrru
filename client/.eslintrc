{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "modules": true
  },
  "rules": {
    "strict": 0,
    "no-nested-ternary": 0,
    "new-cap": 0,
    "no-unused-expressions": [2, { "allowTernary": true }],
    "id-length": [2, { "min": 2, "properties": "never", "exceptions": ["_"] }],
    "no-shadow": 0,
    "react/jsx-boolean-value": 1,
  },
  "extends": [
    "airbnb"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "window": true,
    "document": true,
    "navigator": true,
    "L": true
  }
}